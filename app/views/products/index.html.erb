<p>Total number of products:</p>
<p><%= @products.count %></p>
<%= link_to 'New product', new_product_path %>
<br /><br />
<table style='width:40%;text-align:left'>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Price</th>
    <th>Image</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= image_tag product.image.url(:thumb) %></td>
      <td><%= link_to 'Add to Cart', carts_path(product: product), method: :post %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Delete', product_path(product), method: :delete %></td>
    </tr>
  <% end %>
</table>
<br />
<p><b>Item in Cart (id):</b></p>
<% if @cart %>
<p><b><%= @cart.line_items.count %></b></p>
  <% @cart.line_items.each do |line_item| %>
    <p><%= line_item.product.name %></p>
    <%= image_tag line_item.product.image.url(:thumb) if line_item.product.image.present? %></p>
    <p><%= line_item.quantity %></p>
    <p><%= link_to 'Remove item from cart', line_item_path(line_item), method: :delete %></p>
  <% end %>
<% else %>
  <p>Cart is empty!</p>
<% end %>
<br />
<p><%= (link_to 'Complete order', cart_path(@cart), method: :put) if @cart %></p>
<br />
